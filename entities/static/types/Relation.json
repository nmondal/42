{
    "$id": "https://cowj/Relation.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for Entity Relation",
    "title": "Relation",
    "type": "object",
    "properties": {
       "name": { "type" : "string" },
       "entities": { 
        "type" : "array",
        "items" : {
          "type" : "string",
          "pattern": "^[a-zA-Z]+\\:[a-zA-Z0-9]+$",
          "minItems": 2,
          "maxItems": 2
        } 
      }
    },
    "required": [ "entities", "name" ],
    "additionalProperties": true
  }