{
    "$id": "https://42.cowj/Event.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for Eventing",
    "title": "Event",
    "type": "object",
    "properties": {
      "type" : { "type" :  "string" },
      "entities": {
        "type" : "array",
        "items" : {
          "type" : "string",
          "pattern": "^[a-zA-Z]+\\:[a-zA-Z0-9]+$",
          "minItems": 1
        }
      }
    },
    "required": [ "type","entities" ],
    "additionalProperties": true
  }